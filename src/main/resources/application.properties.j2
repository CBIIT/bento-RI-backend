#API Version
bento.api.version={{bento_api_version}}

#Authentication
auth.enabled={{auth_enabled}}
# auth.endpoint=

#Spring
spring.mvc.throw-exception-if-no-handler-found=true
spring.mvc.view.prefix=/WEB-INF/
spring.mvc.view.suffix=.jsp
error.redirect_url=http://localhost/error.html

#Neo4j
# following properties will be read from environment variables
# neo4j.url =
# neo4j.user =
# neo4j.password =

#GraphQL
graphql.schema=graphql/bento-extended.graphql
graphql.es_schema = graphql/bento-extended-private-es.graphql

#Public GraphQL
graphql.public.schema=graphql/bento-extended-public.graphql
graphql.public.es_schema=graphql/bento-extended-public-es.graphql

#Query Restrictions
allow_graphql_query = true
allow_graphql_mutation =false

#Redis Caching
# following properties will be read from environment variables
# redis.enable =
# redis.use_cluster =
# redis.host =
# redis.port =
redis.ttl=-1

# Elasticsearch Filtering
# es.host = {{es_host}} # This will be reading from env_var ES_HOST
es.port = 443
es.scheme = https
es.filter.enabled = true
# use es.sign.requests = true if running AWS OpenSearch
es.sign.requests = true